pipeline {
    agent any

    environment {
        RAILWAY_TOKEN = credentials('railway-api-token') // Jenkins Secret Text credential ID
        SERVICE_NAME = 'spring-petclinic-app'            // Railway service name
    }

    stages {
        stage('Test Railway Deploy') {
            steps {
                withCredentials([string(credentialsId: 'RAILWAY_TOKEN', variable: 'TOKEN')]) {
                    bat """
                    set RAILWAY_TOKEN=%TOKEN%
                    railway whoami
                    railway up --service spring-petclinic-app --detach
                    """

            }
        }
    }
}
